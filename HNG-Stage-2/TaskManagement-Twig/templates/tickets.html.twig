{% extends "base.html.twig" %}

{% block title %}Ticket Management - Ticketlify{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-50">
    <header class="bg-white shadow-sm sticky top-0 z-40">
        <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-4">
                <h1 class="text-2xl font-bold text-indigo-600">Ticketlify</h1>
                <div class="flex items-center gap-4">
                    <a href="dashboard.php" class="text-gray-600 hover:text-indigo-600 transition hidden sm:inline">
                        Dashboard
                    </a>
                    <span class="text-gray-600 hidden sm:inline">{{ session.name }}</span>
                    <a href="logout.php" class="flex items-center gap-2 text-gray-600 hover:text-red-600 transition">
                        <i data-lucide="log-out"></i>
                        <span class="hidden sm:inline">Logout</span>
                    </a>
                </div>
            </div>
        </div>
    </header>

    <main class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="flex justify-between items-center mb-8">
            <div>
                <h2 class="text-4xl font-bold text-gray-800 mb-2">Ticket Management</h2>
                <p class="text-xl text-gray-600">Create, view, edit, and delete your tickets</p>
            </div>
            <a
                href="?show_form=true"
                class="bg-indigo-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-indigo-700 transition flex items-center gap-2"
            >
                <i data-lucide="plus"></i>
                New Ticket
            </a>
        </div>

        {% if showForm %}
            <div class="bg-white rounded-xl shadow-md p-8 mb-8">
                <h3 class="text-2xl font-bold mb-6">{{ editingTicket ? 'Edit Ticket' : 'Create New Ticket' }}</h3>
                <form method="POST" class="space-y-6">
                    <input type="hidden" name="action" value="{{ editingTicket ? 'update' : 'create' }}">
                    {% if editingTicket %}
                        <input type="hidden" name="ticket_id" value="{{ editingTicket.id }}">
                    {% endif %}
                    
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Title *</label>
                        <input
                            type="text"
                            name="title"
                            value="{{ editingTicket.title ?? '' }}"
                            class="w-full px-4 py-3 border {{ errors.title ? 'border-red-500' : 'border-gray-300' }} rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition"
                            placeholder="Enter ticket title"
                        />
                        {% if errors.title %}
                            <p class="text-red-500 text-sm mt-1">{{ errors.title }}</p>
                        {% endif %}
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Description</label>
                        <textarea
                            name="description"
                            rows="4"
                            class="w-full px-4 py-3 border {{ errors.description ? 'border-red-500' : 'border-gray-300' }} rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition"
                            placeholder="Enter ticket description"
                        >{{ editingTicket.description ?? '' }}</textarea>
                        {% if errors.description %}
                            <p class="text-red-500 text-sm mt-1">{{ errors.description }}</p>
                        {% endif %}
                    </div>

                    <div class="grid md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Status *</label>
                            <select
                                name="status"
                                class="w-full px-4 py-3 border {{ errors.status ? 'border-red-500' : 'border-gray-300' }} rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition"
                            >
                                <option value="open" {{ (editingTicket.status ?? '') == 'open' ? 'selected' : '' }}>Open</option>
                                <option value="in_progress" {{ (editingTicket.status ?? '') == 'in_progress' ? 'selected' : '' }}>In Progress</option>
                                <option value="closed" {{ (editingTicket.status ?? '') == 'closed' ? 'selected' : '' }}>Closed</option>
                            </select>
                            {% if errors.status %}
                                <p class="text-red-500 text-sm mt-1">{{ errors.status }}</p>
                            {% endif %}
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Priority</label>
                            <select
                                name="priority"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition"
                            >
                                <option value="low" {{ (editingTicket.priority ?? '') == 'low' ? 'selected' : '' }}>Low</option>
                                <option value="medium" {{ (editingTicket.priority ?? 'medium') == 'medium' ? 'selected' : '' }}>Medium</option>
                                <option value="high" {{ (editingTicket.priority ?? '') == 'high' ? 'selected' : '' }}>High</option>
                            </select>
                        </div>
                    </div>

                    <div class="flex gap-4">
                        <button type="submit" class="bg-indigo-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-indigo-700 transition">
                            {{ editingTicket ? 'Update Ticket' : 'Create Ticket' }}
                        </button>
                        <a href="tickets.php" class="bg-gray-200 text-gray-700 px-8 py-3 rounded-lg font-semibold hover:bg-gray-300 transition">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        {% endif %}

        {% if tickets is empty %}
            <div class="bg-white rounded-xl shadow-md p-12 text-center">
                <i data-lucide="alert-circle" class="mx-auto text-gray-400 mb-4 w-12 h-12"></i>
                <h3 class="text-2xl font-semibold text-gray-700 mb-2">No Tickets Yet</h3>
                <p class="text-gray-600 mb-6">Create your first ticket to get started.</p>
                <a
                    href="?show_form=true"
                    class="bg-indigo-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-indigo-700 transition inline-flex items-center gap-2"
                >
                    <i data-lucide="plus"></i>
                    Create Ticket
                </a>
            </div>
        {% else %}
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for ticket in tickets %}
                    <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition">
                        <div class="flex justify-between items-start mb-4">
                            <h3 class="text-xl font-bold text-gray-800 flex-1 pr-4">{{ ticket.title }}</h3>
                            <span class="px-3 py-1 rounded-full text-xs font-semibold border {{ getStatusColor(ticket.status) }}">
                                {{ getStatusLabel(ticket.status) }}
                            </span>
                        </div>

                        {% if ticket.description %}
                            <p class="text-gray-600 mb-4 line-clamp-3">{{ ticket.description }}</p>
                        {% endif %}

                        <div class="flex items-center justify-between pt-4 border-t border-gray-200">
                            <span class="text-sm text-gray-500">
                                Priority: <span class="font-semibold capitalize">{{ ticket.priority ?? 'medium' }}</span>
                            </span>
                            <div class="flex gap-2">
                                <a
                                    href="?edit={{ ticket.id }}"
                                    class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition"
                                    title="Edit"
                                >
                                    <i data-lucide="edit-2" class="w-4 h-4"></i>
                                </a>
                                <form method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this ticket? This action cannot be undone.');">
                                    <input type="hidden" name="action" value="delete">
                                    <input type="hidden" name="ticket_id" value="{{ ticket.id }}">
                                    <button type="submit" class="p-2 text-red-600 hover:bg-red-50 rounded-lg transition" title="Delete">
                                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </main>

    <footer class="bg-gray-800 text-white py-8 mt-20">
        <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <p class="text-gray-400">&copy; 2025 Ticketlify. All rights reserved.</p>
        </div>
    </footer>
</div>
{% endblock %}