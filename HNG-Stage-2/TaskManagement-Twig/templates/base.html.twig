<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ticketlify {% block title %}{% endblock %}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    <style>
        @keyframes slide-in {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }
        .animate-slide-in { animation: slide-in 0.3s ease-out; }
        .line-clamp-3 {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
</head>
<body class="min-h-screen bg-gray-50">
    {% if toast %}
        <div class="fixed top-4 right-4 {{ toast.type == 'error' ? 'bg-red-500' : (toast.type == 'success' ? 'bg-green-500' : 'bg-blue-500') }} text-white px-6 py-4 rounded-lg shadow-lg flex items-center gap-3 z-50 animate-slide-in max-w-md">
            <i data-lucide="{{ toast.type == 'success' ? 'check-circle' : 'alert-circle' }}"></i>
            <span class="flex-1">{{ toast.message }}</span>
            <button onclick="this.parentElement.remove()" class="hover:opacity-80">
                <i data-lucide="x"></i>
            </button>
        </div>
    {% endif %}

    {% block content %}{% endblock %}

    <script>
        // Initialize Lucide icons
        lucide.createIcons();
        
        // Auto-hide toast after 4 seconds
        setTimeout(() => {
            const toast = document.querySelector('.fixed.top-4');
            if (toast) {
                toast.remove();
            }
        }, 4000);
    </script>
</body>
</html>